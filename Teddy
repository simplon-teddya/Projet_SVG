<script type="text/javascript">

function  menu(){
  document.getElementById("menu").style.display="block";
  document.getElementById("barre2_1").style.transition = "all 1s ease-in";
  document.getElementById("barre2_1").style.transform = "rotate("+45+"deg)";
  document.getElementById("barre2_1").style.backgroundColor ="white";
  document.getElementById("barre1").style.display="none";
  document.getElementById("barre3").style.display="none";
  document.getElementById("barre2_2").style.transition = "all 1s ease-in";
  document.getElementById("barre2_2").style.transform = "rotate("+135+"deg)";
  document.getElementById("barre2_2").style.backgroundColor ="white";
}

function  menu_close(){
  document.getElementById("menu").style.display="none";
  document.getElementById("barre2_1").style.transition = "all 1s ease-in";
  document.getElementById("barre2_1").style.transform = "rotate("+0+"deg)";
  document.getElementById("barre2_1").style.backgroundColor ="#61361f";
  document.getElementById("barre1").style.display="block";
  document.getElementById("barre3").style.display="block";
  document.getElementById("barre2_2").style.transition = "all 1s ease-in";
  document.getElementById("barre2_2").style.transform = "rotate("+180+"deg)";
  document.getElementById("barre2_2").style.backgroundColor ="#61361f";
}
    </script>

    <script type="text/javascript">
    $(document).ready(function() {
    $('a[href^="#"]').click(function() {
    var ou = $(this).attr("href").substr(1);
    var saut = $("a[name='"+ ou +"']");
    $('html,body').animate({scrollTop: $(saut).offset().top}, 1000);
    return false;
    });
    });

    </script>

    <script type="text/javascript">
    $('#next').click(function() {
          event.preventDefault();
          $('#content').animate({
            marginLeft: "-=200px"
          }, "fast");
       });
    </script>


